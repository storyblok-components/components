{
  "name": "root",
  "workspaces": [
    "@storyblok-components/*",
    "@docs"
  ],
  "author": "Marcin Krawczyk <marckraw@icloud.com> and Pedro Sousa",
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start-docs": "node scripts/generateComponentsList.js && node scripts/generateComponentSchemaList.js && cd @docs && yarn dev",
    "start": "yarn build:components",
    "build:components": "lerna exec --parallel --ignore '@docs/docs' yarn build",
    "build-docs": "node scripts/generateComponentsList.js && node scripts/generateComponentSchemaList.js && cd @docs && yarn export:production",
    "start:dev": "lerna exec --parallel --ignore '@docs/docs' yarn build:dev",
    "clean:modules": "rm -rf node_modules && lerna exec --parallel 'rm -rf node_modules'",
    "clean:dist": "lerna exec --parallel 'rm -rf dist'",
    "clean:all:packages": "yarn clean:modules && yarn clean:dist",
    "dev": "yarn start:dev && yarn start-docs",
    "postinstall": "node ./node_modules/husky/lib/installer/bin install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.0.4",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.3",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.0.4"
  },
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.1",
    "figlet": "^1.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npx prettier --write",
      "eslint -c ./.eslintrc.js --fix"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  }
}
