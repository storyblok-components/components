{
  "name": "root",
  "workspaces": [
    "@storyblok-components/*",
    "@docs"
  ],
  "author": "Marcin Krawczyk <marckraw@icloud.com> and Pedro Sousa",
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start-docs": "node scripts/generateComponentsList.js && cd @docs && yarn start",
    "start": "yarn build:components",
    "build:components": "lerna exec --parallel --ignore '@docs' yarn build",
    "start:dev": "lerna exec --parallel --ignore '@docs' yarn build:dev",
    "dev": "yarn start:dev && yarn start-docs",
    "postinstall": "node ./node_modules/husky/lib/installer/bin install"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4"
  },
  "dependencies": {
    "babel-eslint": "^10.1.0",
    "core-js": "2.6.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npx prettier --write",
      "eslint -c ./.eslintrc.js --fix"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "pre-commit": "lint-staged"
    }
  }
}
